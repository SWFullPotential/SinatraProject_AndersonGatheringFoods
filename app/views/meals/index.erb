<div class="w3-padding-large" id="main">
<header class="w3-container w3-padding-32 w3-center w3-grey" id="index">
<h1 class="center">Welcome, <%= current_user.username %>  Family!</h1>
<hr>
<h2>Existing Meals</h2>
<% @meals.each do |meal|%>
    <p><%= meal.day_meal %> - <%= meal.food %> - <%= meal.user.username %>
    <% if current_user.owns_meal?(meal) %>
        <a href="/meals/<%= meal.id %>/edit" class="btn-floating pulse"><i class="material-icons">edit</i></a></p>
    <% end %>

<% end %>
<hr>
<br>
<br>
<a href="/meals/new" class="w3-bar-item w3-button w3-padding-large w3-hover-black"><i class="fa fa-plus-circle w3-xxlarge"></i></a>
</div>

